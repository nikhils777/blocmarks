<h1>All Topics!</h1>
<% @topics.each do |topic| %>
<table class="table table-bordered">
  <tr class="info">
    <td><%= topic.title %></td>
  </tr>
  <% topic.blocmarks.each do |bloc| %>
    <tr>
      <td><%= bloc.url %></td>
      <% if current_user && current_user.blocmarks.include?(bloc) %>
        <td>Already Liked!</td>
      <% elsif current_user %>
        <td><%= button_to "Like!", {:controller => "likes", :action => "create", :blocmark_id => bloc.id, :user_id => current_user.id} , :method => :post %></td>
      <% else %>
        <td>Sign up!</td>
      <% end %>
    </tr>
  <% end %>
</table>
<br>
<% end %>